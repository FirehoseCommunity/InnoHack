<h1>Shares</h1>

<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <% @shares.each do |share| %>
  <div class="post">
    <div class="handle"><%= current_user.name %></div>
    <%= link_to share.title, share_path(share) %>
    <p>
      <%= share.body %>
    </p>
   </div>
  <% end %>
</div>