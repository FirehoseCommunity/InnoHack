<h1><%= params[:hashtag] %></h1>
<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <% if @hashtagged %>
    <% @hashtagged.each do |hashtagged| %>
      <div class="booyah-box post">
        <%= link_to hashtagged.title, share_path(hashtagged) %>
        <p>
          <%= linkify_hashtags(hashtagged.body) %>
        </p>
        <%= pluralize(hashtagged.votes.count, "votes") %>
      </div>
    <% end -%>
  <% else -%>
    <p>There is no match for the <em><%= params[:hashtag] %></em> hashtag.</p>
  <% end -%>
</div>