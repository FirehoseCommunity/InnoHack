<div class="container-fluid dashboard col-sm-2">
	<%= image_tag current_user.gravatar_url(:size => 120) %>
	<br />

	<div class="col-sm-2">
	<br />
		<%= @user.email %>
	</div>
</div>


<div class="container-fluid">
	<div class="col-sm-10 dashboardr">
		<h1>User Shares</h1>
		<% @user.shares.each do |share| %>
			<h2><%= link_to share.title, share_path(share) %></h2>
		<% end %>
		<%= link_to 'Update Background', skins_path %>
	</div>
</div>


<div class="container-fluid">
	<div class="col-sm-10 dashboardr">
		<h1>User Comments</h1>
		<% @user.comments.each do |comment| %>
			Comment: <%= comment.body %><br />
			Left on this share: <%= link_to comment.share.title, share_path(comment.share) %><br /><br />
		<% end %>
	</div>
</div>
